@{
  Layout = "_Layout";
}

@using PierreTreats.Models
@model PierreTreats.Models.Treat

<h2>Treat Details</h2>
</hr>
<h3>@Html.DisplayNameFor(model => model.TreatType): @Html.DisplayFor(model => model.TreatType)</h3>

@if(@Model.JoinEntities.Count == 0)
{
  <p>This Treat does not have any Flavors yet</p>
}
else
{
  <h4>This Treat has the following Flavors:</h4>
  <ul>
    @foreach(TreatFlavor join in Model.JoinEntities)
    {
      <li>Flavor: @join.Flavor.FlavorType</li>
      @using (Html.BeginForm("DeleteJoin", "Treats"))
      {
        @Html.Hidden("joinId", @join.TreatFlavorId)
        <input type="submit" value="Delete" />
      }
    }
  </ul>
}

<p>@Html.ActionLink("Back to list", "Index")</p>
<p>@Html.ActionLink("Edit Treat", "Edit", new { id = model.TreatId })</p>
<p>@Html.ActionLink("Add a Flavor", "AddFlavor", new { id = model.TreatId })</p>
<p>@Html.ActionLink("Delete Treat", "Delete", new { id = model.TreatId })</p>